---
interface Props {
  // TODO: Accept appropriate Temporal types, and display them at the right resolution.
  datetime: Date;
}
const { datetime } = Astro.props;

const defaultFormatter = Intl.DateTimeFormat("en-us", {
  timeZone: "UTC",
  dateStyle: "medium",
});
---

<script>
  import "@github/relative-time-element";
</script>
{
  isNaN(datetime.getTime()) ? (
    "<Invalid Date>"
  ) : (
    /*prettier-ignore */
    <relative-time datetime={datetime.toISOString()}>{defaultFormatter.format(datetime)}</relative-time>
  )
}
